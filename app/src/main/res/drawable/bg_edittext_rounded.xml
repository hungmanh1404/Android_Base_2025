<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Bo góc -->
    <corners android:radius="10dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp" />
</shape>
