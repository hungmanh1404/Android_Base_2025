<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:gravity="bottom"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="!" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="k" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="C" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text=":" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="k" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="(" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text=")" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="7" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="8" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="9" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="4" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="5" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="6" />

        <TextView
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/CalculatorButton"
                    android:layout_weight="1"
                    android:text="1" />

                <TextView
                    style="@style/CalculatorButton"
                    android:layout_weight="1"
                    android:text="2" />

                <TextView
                    style="@style/CalculatorButton"
                    android:layout_weight="1"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/CalculatorButton"
                    android:layout_weight="2"
                    android:text="0" />

                <TextView
                    style="@style/CalculatorButton"
                    android:layout_weight="1"
                    android:text="." />

            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/CalculatorButton"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>
</LinearLayout>